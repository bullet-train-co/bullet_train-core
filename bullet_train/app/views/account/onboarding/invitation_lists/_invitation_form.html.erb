<%= form.fields_for :invitations, Invitation.new do |invitation_form| %>
  <div class="col-span-1">
    <%= render 'shared/fields/email_field', form: invitation_form, method: :email, options: {autofocus: true}, other_options: {error: form.object.errors.full_messages_for("invitations.email").first } %>
  </div>

  <%= invitation_form.fields_for :membership, Membership.new do |membership_form| %>
    <div class="col-span-1">
      <%= render 'shared/fields/super_select', form: membership_form, method: :role_ids, choices: available_roles, select2_options: {allowClear: false}, html_options: {multiple: true}, other_options: {label: t('.membership.roles')} %>
    </div>
  <% end %>
<% end %>
