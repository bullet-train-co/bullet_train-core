<% showcase.sample "Basic" do %>
  <%= render "shared/alert" do %>
    Hello there!
  <% end %>
<% end %>

<% showcase.sample "Red" do %>
  <%= render "shared/alert", color: "red" do %>
    Hello there!
  <% end %>
<% end %>

<% showcase.sample "Blue" do %>
  <%= render "shared/alert", color: "blue" do %>
    Hello there!
  <% end %>
<% end %>

<% showcase.options do |o| %>
  <% o.optional :color, "Colors the wrapping element background, border and text", default: "yellow", options: %w[yellow red blue] %>
<% end %>
