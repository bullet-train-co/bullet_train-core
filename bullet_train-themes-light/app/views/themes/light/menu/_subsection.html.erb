<% expand ||= false %>

<% if expand %>
  <div class="mb-3">
    <%= render 'account/shared/menu/heading' do %>
      <%= title %>
    <% end %>

    <%= yield %>
  </div>
<% else %>
  <div>
    <div class="inline-block relative group">
      <%= render 'account/shared/menu/heading' do %>
        <%= title %>

        <svg class="inline-block flex-shrink-0 h-3 w-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      <% end %>

      <div class="invisible group-hover:visible transition duration-200 scale-90 group-hover:scale-100 group-hover:translate-x-3 absolute top-0 left-full -mt-3 -ml-5 pl-4 z-40">
        <div class="bg-primary-700 rounded-lg py-3 px-4 w-56 shadow">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
<% end %>
