    <%= cable_ready_updates_for @tangible_thing do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @tangible_thing %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @tangible_thing, strategy: :label do %>
