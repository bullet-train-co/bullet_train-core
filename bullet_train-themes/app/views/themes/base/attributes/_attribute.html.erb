<% object ||= current_attributes_object %>
<% strategy ||= current_attributes_strategy || :none %>
<% url ||= nil %>
<% link_html_options ||= {} %>

<%= render 'shared/attributes/base', strategy: strategy, url: url, attribute: attribute, html_options: link_html_options do |p| %>
  <% p.heading t("#{object.class.name.pluralize.underscore}.fields.#{attribute}.heading", default: object.class.human_attribute_name(attribute)) %>
  <% p.body yield %>
<% end %>
