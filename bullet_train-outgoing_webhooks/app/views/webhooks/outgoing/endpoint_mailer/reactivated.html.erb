<% content_for :preheader do %>
<%= t('.preview', @values) %>
<% end %>

<div class="alert alert-success">
  <%= t('.alert', @values) %>
</div>

<h1><%= t('.heading', @values) %></h1>
<%= t('.body.html', @values) %>

<div class="endpoint-details">
  <h3><%= t('.details.heading', @values) %></h3>
  <p><strong><%= t('.details.name', @values) %></strong> <%= @endpoint.name %></p>
  <p><strong><%= t('.details.url', @values) %></strong> <code><%= @endpoint.url %></code></p>
  <p><strong><%= t('.details.status', @values) %></strong> <%= t('.details.status_value', @values) %></p>
  <p><strong><%= t('.details.reactivated', @values) %></strong> <%= Time.current.strftime("%B %d, %Y at %I:%M %p %Z") %></p>
</div>

<h2><%= t('.explanation.heading', @values) %></h2>
<p><%= t('.explanation.text', @values) %></p>

<h2><%= t('.meaning.heading', @values) %></h2>
<ul>
  <% t('.meaning.points', @values).each do |point| %>
    <li><%= point %></li>
  <% end %>
</ul>

<p><%= t('.monitoring.text', @values) %></p>

<%= t('.signature.html', @values) %>
